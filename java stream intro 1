package org.example;

import java.util.*;
import java.util.function.*;
import java.util.stream.Collectors;
import java.util.stream.Stream;

public class Main {
    public static void main(String[] args) {
       // Streams
        //process collections of data in a functional and declarative manner
        //simplify complex data processing tasks
        //Stream is a sequence of elements supporting sequential and parallel aggregate operations
        List<Integer> numbers = Arrays.asList(1, 2, 3, 4, 5);
        long cnt =  numbers.stream().filter(n -> n % 2 == 0).count();
//        System.out.println("Sum of even numbers: " + cnt);

        //Creating Streams
        //1. From Collections
        List<String> list = Arrays.asList("a", "b", "c", "d");
        Stream<String> streamFromCollection = list.stream();
        //2. From Arrays
        String[] array = {"x", "y", "z"};
        Stream<String> streamFromArray = Arrays.stream(array);
        //3. Using Stream.of()
        Stream<Integer> streamOf = Stream.of(10, 20, 30, 40);
        //4. Infinite Streams
        Stream<Double> infiniteStream = Stream.generate(Math::random).limit(5);
//        Stream.iterate(0, n -> n + 2).limit(5).forEach(System.out::println);

       // Double highest_number = infiniteStream.max(Double :: compare).orElse(0.0);

    }
}
